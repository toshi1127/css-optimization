{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "lib": ["es6", "es2015.promise", "dom", "es2017"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./**/__tests__/*.ts"]
}
